@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to SafeChat</h1>
        <p class="lead">Privacy-focused, real-time messaging</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-globe" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h3 class="card-title mt-3">Public Rooms</h3>
                    <p class="card-text">Join open chat rooms and talk with everyone</p>
                    <a href="@Url.Action("PublicRooms", "Chat")" class="btn btn-primary btn-lg">Browse Public Rooms</a>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-lock-fill" style="font-size: 3rem; color: #198754;"></i>
                    <h3 class="card-title mt-3">Private Rooms</h3>
                    <p class="card-text">Create invite-only rooms with QR codes</p>
                    <a href="@Url.Action("PrivateRooms", "Chat")" class="btn btn-success btn-lg">Create Private Room</a>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <strong>🔒 Privacy Notice:</strong> All messages automatically delete after 5 minutes. Empty private rooms are removed automatically.
    </div>
</div>
