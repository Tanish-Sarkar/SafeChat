@{
    ViewData["Title"] = "Private Rooms";
}

<div class="container mt-4">
    <h2>Create Private Room</h2>
    <p class="text-muted">Generate a private room with QR code and invite link</p>

    <hr />

    <div class="card">
        <div class="card-body text-center">
            <i class="bi bi-lock-fill" style="font-size: 4rem; color: #198754;"></i>
            <h4 class="mt-3">Create Your Private Room</h4>
            <p>Once created, you'll get a QR code and shareable link to invite others</p>

            <form asp-action="CreatePrivateRoom" asp-controller="Chat" method="post">
                <button type="submit" class="btn btn-success btn-lg mt-3">
                    <i class="bi bi-plus-circle"></i> Create Private Room
                </button>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <strong>ℹ️ Info:</strong> Private rooms are automatically deleted when all users leave.
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Chat")" class="btn btn-secondary">← Back to Chat Home</a>
    </div>
</div>